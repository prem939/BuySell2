<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_160sdp"
    android:layout_gravity="center"
    android:background="@drawable/bgmain"
    android:orientation="vertical"
    android:padding="@dimen/_30sdp">

    <TextView
        android:id="@+id/tvTitlePopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_30sdp"
        android:drawablePadding="5dp"
        android:gravity="left"
        android:text="Warning!"
        android:textColor="@color/PrimaryDark"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:background="@drawable/divideline1" />
    <TextView
        android:id="@+id/tvMessagePopup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_weight="1"
        android:gravity="left"
        android:text="Do you want to check out?"
        android:textColor="@color/PrimaryDark"
        android:textSize="@dimen/_12ssp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:gravity="right">

        <Button
            android:id="@+id/btnYesPopup"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_23sdp"
            android:background="@drawable/round_navy_blue"
            android:text="@string/OK"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnNoPopup"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:background="@drawable/round_gray"
            android:text="@string/Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

</LinearLayout>