<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llLoginPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/_20sdp"
        android:layout_weight="0.2"
        android:orientation="vertical">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/PrimaryDark"
        android:textSize="@dimen/_22sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello there,"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/PrimaryDark"
        android:textSize="@dimen/_22sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buy Sell..."/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:layout_gravity="center"
        android:id="@+id/llLoginField"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/userid">

                <EditText
                    android:id="@+id/edit_userId"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_15sdp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="@string/password">

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                    android:paddingLeft="@dimen/_5sdp"
                    android:password="true"
                    android:textSize="@dimen/_15sdp" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_20sdp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/pwdCheckbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/PrimaryDark"
                android:clickable="true"
                android:text="Show Password"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/PrimaryDark"
                android:textSize="@dimen/_10ssp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_11ssp"
                android:textColor="@color/PrimaryDark"
                android:layout_gravity="center"
                android:gravity="right"
                android:textStyle="bold"
                android:id="@+id/txtForgotPassword"
                android:text="@string/forgot_password">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">
            <Button
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/round_navy_blue"
                android:text="Login"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:id="@+id/btn_login"
                android:layout_gravity="center"
                android:textSize="@dimen/_12ssp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_5sdp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User? "
            android:textSize="@dimen/_11ssp"
            android:textColor="@color/PrimaryDark"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:textColor="@color/PrimaryDark"
            android:id="@+id/tvSignUp"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llSignUpPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_20sdp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textColor="@color/PrimaryDark"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy Sell..."
                android:textColor="@color/PrimaryDark"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingRight="@dimen/_20sdp">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/fName">
                                    <EditText
                                        android:id="@+id/etFirstName"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_gravity="center"
                                        android:imeOptions="actionNext"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:textSize="@dimen/_15ssp" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingRight="@dimen/_20sdp">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/lName">
                                    <EditText
                                        android:id="@+id/etLastName"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_gravity="center"
                                        android:imeOptions="actionNext"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                                        android:paddingLeft="@dimen/_5sdp"
                                        android:textSize="@dimen/_15ssp" />
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_20sdp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:layout_weight=".28"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/spinUserType"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="2dp"
                                    android:layout_marginLeft="5dp"
                                    android:background="@android:color/transparent"
                                    android:textSize="@dimen/_10sdp" />

                                <ImageView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/drop" />
                            </RelativeLayout>
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_gravity="center"
                                android:background="@color/gray"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Email"
                                >
                                <EditText
                                    android:id="@+id/etEmail"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="text"
                                    android:maxLines="1"
                                    android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:textSize="@dimen/_15ssp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_20sdp"
                            android:paddingRight="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_5sdp">
                            <com.hbb20.CountryCodePicker
                                android:id="@+id/ccp"
                                android:layout_width="match_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.4"
                                android:background="@color/light"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:onClick="onCountryPickerClick" />
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="@string/pNo">
                                <EditText
                                    android:id="@+id/etPhone"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_35sdp"
                                    android:layout_gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="numberDecimal"
                                    android:maxLines="1"
                                    android:digits="0123456789"
                                    android:maxLength="10"
                                    android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                                    android:textSize="@dimen/_15sdp" />
                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_5sdp">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/password">
                                    <EditText
                                        android:id="@+id/etPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.9"
                                        android:imeOptions="actionNext"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:password="true"
                                        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                                        android:textSize="@dimen/_15sdp" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/_20sdp"
                                android:paddingRight="@dimen/_20sdp"
                                android:layout_marginTop="@dimen/_5sdp">
                                <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/cPassword">
                                    <EditText
                                        android:id="@+id/etConfPassword"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.9"
                                        android:imeOptions="actionNext"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:password="true"
                                        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                                        android:textSize="@dimen/_15sdp" />
                                </com.google.android.material.textfield.TextInputLayout>
                            </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnCreateAccount"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_32sdp"
                        android:background="@drawable/round_navy_blue"
                        android:text="Create Account"
                        android:textStyle="bold"
                        android:visibility="visible"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lllogin"
            android:layout_marginBottom="@dimen/_5sdp"
            android:gravity="center">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/exited_user"
                android:textColor="@color/PrimaryDark"
                android:textSize="@dimen/_11ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="@string/login"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_2sdp"
                android:textColor="@color/PrimaryDark"
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/llResetPasswordPage">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/_20sdp"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:textColor="@color/PrimaryDark"
                android:textSize="@dimen/_22sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello there,"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/PrimaryDark"
                android:textSize="@dimen/_22sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome back!"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/userid">

                    <EditText
                        android:id="@+id/edtUserId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:digits="0123456789"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                        android:maxLines="1"
                        android:textSize="@dimen/_15sdp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:id="@+id/llOtp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/OTP">

                    <EditText
                        android:id="@+id/edOtp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:digits="0123456789"
                        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                        android:imeOptions="actionNext"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textSize="@dimen/_15sdp" />
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/llNewPassword"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/nPassword">

                    <EditText
                        android:id="@+id/edtNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:textCursorDrawable="@drawable/custom_edit_text_cursor"
                        android:textSize="@dimen/_15sdp" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/llConformNewPassword"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/cPassword">

                    <EditText
                        android:id="@+id/edtConformNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_gravity="center"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:textSize="@dimen/_15sdp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center">

            <Button
                android:id="@+id/btnValidate"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/round_navy_blue"
                android:text="Userid Validate"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnOtp"
                android:text="Otp Validate"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/round_navy_blue"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:visibility="gone"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/btnPasswordUpdate"
                android:text="Password Update"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_32sdp"
                android:background="@drawable/round_navy_blue"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/back_to_login"
                android:textStyle="bold"
                android:textColor="@color/PrimaryDark"
                android:id="@+id/txtBackToLogin">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>